{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "strict": true,
    "outDir": "dist",
    "skipLibCheck": true,
    "rootDir": "../",
    "baseUrl": "../",
    "paths": {
      "@/*": ["src/*"]
    },
    "types": ["node"],
    "allowJs": true,
    "resolveJsonModule": true,
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"]
  },
  "include": [
    "src/**/*",
    "../src/services/**/*",
    "../src/config/**/*",
    "../src/integrations/**/*",
    "../src/lib/**/*"
  ],
  "exclude": ["node_modules"]
}
