# Environment Configuration Example
# Copy this file to .env and update with your actual values

NODE_ENV=development

# Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost:5432/lovable_merge_mate

# Redis Configuration
REDIS_URL=redis://localhost:6379

# JWT Authentication
JWT_SECRET=your-super-secure-jwt-secret-here
REFRESH_TOKEN_SECRET=your-super-secure-refresh-token-secret-here

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:13337/api/auth/google/callback

# API Configuration
API_PORT=13337
FRONTEND_URL=http://localhost:5173

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# Session Configuration
SESSION_TIMEOUT=86400
ACCESS_TOKEN_EXPIRY=900
REFRESH_TOKEN_EXPIRY=604800

# Rate Limiting
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX_REQUESTS=100

# AI Services (Optional)
CLAUDE_API_KEY=your-claude-api-key
ELEVENLABS_API_KEY=your-elevenlabs-api-key

# Email Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Monitoring (Optional)
SENTRY_DSN=your-sentry-dsn
LOG_LEVEL=info

# Security
BCRYPT_ROUNDS=12
CSRF_SECRET=your-csrf-secret

# File Upload (Optional)
MAX_FILE_SIZE=10485760
UPLOAD_DIR=uploads

# Development Only
DEBUG=true
VERBOSE_LOGGING=false

# Railway Production (Override these in Railway dashboard)
# DATABASE_URL will be automatically set by Railway PostgreSQL service
# REDIS_URL will be automatically set by Railway Redis service
# Remember to set all required secrets in Railway environment variables 